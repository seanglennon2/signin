<%- include('header') -%>

<div class="text-center center-div" id="login">
	<div class="container w-25 border py-5 semiopaque">
		<div class="title pb-5">
			<h2 class="fot-weight-bold">Login System</h2>
			<% if(locals.logout){ %>
				<!--div class="alert alert-success text-center"-->
					<!--%= logout %-->
				<!--/div-->
			<% } %>
			<span>Create New Account</span>
		</div>
		<form action="/route/newuser" method="post" class="pt-3">
			<div class="form-group pb-3">
				<input type="email" class="form-control" placeholder="email" name="email">
				<!--small class="form-text text-muted text-left">Register email address</small-->
			</div>
			<div class="form-group">
				<input type="password" class="form-control" name="password" placeholder="password">
			</div>
			<div class="form-group pt-3 pb-3">
				<input type="password" class="form-control" name="repassword" placeholder="re-enter password">
			</div>
			<button type="submit" class="btn btn-success rounded">Submit</button>
			<h5>Passwords do not match</h5>
		</form>
	</div>
</div>

<%- include('footer') -%>